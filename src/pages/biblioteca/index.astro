---
import BaseLayout from '../../layouts/BaseLayout.astro';

// OPCIÓN 1: Si mueves las imágenes a /public/
// Mueve tus imágenes de /src/assets/img/ a /public/img/
// Entonces las rutas serán /img/libros.png en vez de /src/assets/img/libros.png

// OPCIÓN 2: Si prefieres usar imports (recomendado para optimización)
import librosImg from '@assets/img/libros.png';
import dibujoImg from '@assets/img/dibujo.png';
import musicaImg from '@assets/img/musicafav.png';
import juegosImg from '@assets/img/juegos.png';
import recetasImg from '@assets/img/misrecetas.png';
import favsImg from '@assets/img/favs.png';
---

<BaseLayout
  title="Media"
  description="Mi colección de libros, música, arte, juegos y más"
>
  <div class="container">
    <main>
      <h1 class="text-3xl font-bold mb-2">Biblioteca</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-sm mb-10">Explora mi colección de contenido favorito: libros, música, dibujos, videojuegos y recetas.</p>
      
      <div class="media-grid">
        <a href="/biblioteca/libros/" class="media-item" title="Libros">
          <div class="image-container" style="height: 220px;">
            <img src={librosImg.src} alt="Libros" />
          </div>
        </a>
        
        <a href="/biblioteca/dibujos/" class="media-item" title="Dibujos">
          <div class="image-container" style="height: 185px;">
            <img src={dibujoImg.src} alt="Dibujos" />
          </div>
        </a>
        
        <a href="/biblioteca/musica/" class="media-item" title="Música y albumes que adoro">
          <div class="image-container" style="height: 230px;">
            <img src={musicaImg.src} alt="Música" />
          </div>
        </a>
        
        <a href="/biblioteca/juegos/" class="media-item" title="Videojuegos">
          <div class="image-container">
            <img src={juegosImg.src} alt="Videojuegos" />
          </div>
        </a>
        
        <a href="/biblioteca/recetas/" class="media-item" title="Mis Recetas (creadas por mi misma: son libres de lactosa, gluten, azúcar)">
          <div class="image-container" style="height: 230px;">
            <img src={recetasImg.src} alt="Recetas" />
          </div>
        </a>
        
        <a href="/biblioteca/favs/" class="media-item" title="Mi colección de favoritos">
          <div class="image-container" style="height: 240px;">
            <img src={favsImg.src} alt="Favoritos" />
          </div>
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .media-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .media-item {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .media-item img {
    height: 100%;
    width: auto;
    max-width: 100%;
    display: block;
    transition: transform 0.3s ease;
    object-fit: contain;
  }

  .media-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .media-item:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .media-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .media-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>