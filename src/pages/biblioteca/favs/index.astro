      { title: '1984', cover: '/favs/libros/1984.jpg', url: 'https://www.goodreads.com/book/show/40961427-1984' },
      { title: 'Cien Años de Soledad', cover: '/favs/libros/cien-anos.jpg', url: 'https://www.goodreads.com/book/show/320.One_Hundred_Years_of_Solitude' },
      // Agrega más libros hasta completar 24 (8x3)
    ]
  },
  {
    title: 'Mangas',
    items: [
      { title: 'Berserk', cover: '/favs/mangas/berserk.jpg', url: 'https://myanimelist.net/manga/2/Berserk' },
      { title: 'One Piece', cover: '/favs/mangas/onepiece.jpg', url: 'https://myanimelist.net/manga/13/One_Piece' },
      { title: 'Vagabond', cover: '/favs/mangas/vagabond.jpg', url: 'https://myanimelist.net/manga/656/Vagabond' },
      // Agrega más mangas
    ]
  },
  {
    title: 'Animes',
    items: [
      { title: 'Cowboy Bebop', cover: '/favs/animes/cowboy-bebop.jpg', url: 'https://myanimelist.net/anime/1/Cowboy_Bebop' },
      { title: 'Steins;Gate', cover: '/favs/animes/steins-gate.jpg', url: 'https://myanimelist.net/anime/9253/Steins_Gate' },
      { title: 'Fullmetal Alchemist', cover: '/favs/animes/fma.jpg', url: 'https://myanimelist.net/anime/5114/' },
      // Agrega más animes
    ]
  },
  {
    title: 'Películas',
    items: [
      { title: 'El Viaje de Chihiro', cover: '/favs/peliculas/chihiro.jpg', url: 'https://www.imdb.com/title/tt0245429/' },
      { title: 'Inception', cover: '/favs/peliculas/inception.jpg', url: 'https://www.imdb.com/title/tt1375666/' },
      { title: 'Interstellar', cover: '/favs/peliculas/interstellar.jpg', url: 'https://www.imdb.com/title/tt0816692/' },
      // Agrega más películas
    ]
  },
  {
    title: 'Series',
    items: [
      { title: 'Breaking Bad', cover: '/favs/series/breaking-bad.jpg', url: 'https://www.imdb.com/title/tt0903747/' },
      { title: 'The Office', cover: '/favs/series/office.jpg', url: 'https://www.imdb.com/title/tt0386676/' },
      { title: 'Avatar: The Last Airbender', cover: '/favs/series/avatar.jpg', url: 'https://www.imdb.com/title/tt0417299/' },
      // Agrega más series
    ]
  }
];
---

<BaseLayout
  title="Favoritos"
  description="Mis cosas favoritas de entretenimiento"
>
  <div class="container">
    <main>
      <h1 class="text-3xl font-bold mb-2">Favoritos</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-sm mb-10">Una colección curada de mis obras favoritas en diferentes medios.</p>
      
      {sections.map((section) => (
        <section class="section-block">
          <h2 class="text-2xl font-bold mb-6 text-cyan-400">{section.title}</h2>
          <div class="favs-grid">
            {section.items.map((item) => (
              <a 
                href={item.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="fav-cover"
                title={item.title}
              >
                <img src={item.cover} alt={item.title} />
              </a>
            ))}
          </div>
        </section>
      ))}
    </main>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-block {
    margin-bottom: 4rem;
  }

  .favs-grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    gap: 1rem;
  }

  .fav-cover {
    position: relative;
    width: 100%;
    padding-bottom: 140%; /* Ratio 5:7 típico de covers */
    overflow: hidden;
    border-radius: 0.375rem;
    background-color: #f0f0f0;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: block;
  }

  :global(.dark) .fav-cover {
    background-color: #2a2a2a;
  }

  .fav-cover:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .fav-cover img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media (max-width: 1400px) {
    .favs-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .favs-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  @media (max-width: 768px) {
    .favs-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .favs-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
    }
  }
</style>