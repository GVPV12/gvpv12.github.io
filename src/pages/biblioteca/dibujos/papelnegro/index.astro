---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

const allImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/*.{jpeg,jpg,png,gif,webp}');

const galleryData = {
  title: 'Papel negro',
  slug: 'papelnegro',
  images: [
    { 
      src: '/src/assets/img/aligned.webp', 
      alt: 'Aligned', 
      description: 'Uno de mis dibujos favoritos. El significado es la sincronicidad espiritual colectiva y personal.', 
      // externalUrl: 'https://www.instagram.com/p/ejemplo1/' 
    },
    { 
      src: '/src/assets/img/catrina.webp', 
      alt: 'Catrina', 
      description: 'Mujer catrina con detalles dorados.',
    },
    { 
      src: '/src/assets/img/shinyshoes.webp', 
      alt: 'Shiny Shoes', 
      description: 'Estudio de texturas brillantes.', 
      // externalUrl: 'https://www.instagram.com/p/ejemplo1/' 
    },
    { 
      src: '/src/assets/img/temporaryhigh.webp', 
      alt: 'Temporary High', 
      description: 'Dibujo sobre la canci√≥n de Aurora que habla del tiempo y de vivir en un loop',
      // externalUrl: 'https://www.instagram.com/p/ejemplo2/' 
    },    
    { 
      src: '/src/assets/img/timebroken.webp', 
      alt: 'Time Broken', 
      description: 'Dibujo sobre el tiempo y como nos esclaviza.', 
      // externalUrl: 'https://www.instagram.com/p/ejemplo1/' 
    },
    { 
      src: '/src/assets/img/practices.webp', 
      alt: 'Practices', 
      description: 'Dibujo practicando objetos brillantes.',
      // externalUrl: 'https://www.instagram.com/p/ejemplo2/' 
    },    
    { 
      src: '/src/assets/img/breadclouds.webp', 
      alt: 'Bread Clouds', 
      description: 'Dibujo sobre el concepto de nubes de pan.', 
      // externalUrl: 'https://www.instagram.com/p/ejemplo1/' 
    },
    { 
      src: '/src/assets/img/puertascielo.webp', 
      alt: 'Puertas al Cielo', 
      description: 'Dibujo inspirado en un concepto de puertas en el cielo que se abren al morir.',
      // externalUrl: 'https://www.instagram.com/p/ejemplo2/' 
    },    
    { 
      src: '/src/assets/img/foxinthenight.webp', 
      alt: 'Fox in the Night', 
      description: 'Dibujo de un zorro m√°gico (kitsune).',
      // externalUrl: 'https://www.instagram.com/p/ejemplo2/' 
    },     
    { 
      src: '/src/assets/img/jellyfishinthenight.webp', 
      alt: 'Medusa brillante', 
      description: 'Dibujo de una medusa porque amo las medusas.',
      // externalUrl: 'https://www.instagram.com/p/ejemplo2/' 
    },     
  ]
};

const { title, images } = galleryData;
---

<BaseLayout title={title} description={`Galer√≠a: ${title}`}>
  <div class="container">
    <main>
      <div class="mb-8">
        <a href="/biblioteca/dibujos/" class="text-cyan-400 hover:text-cyan-300 text-sm mb-4 inline-block">‚Üê Volver a Dibujos</a>
        <h1 class="text-3xl font-bold mb-2">{title}</h1>
      </div>
      
      <div class="gallery-grid">
        {images.map(async (image) => {
          if (!allImages[image.src]) return null;
          const imageMetadata = await allImages[image.src]();

          return (
            <div class="gallery-item">
              <Image 
                src={imageMetadata.default} 
                alt={image.alt} 
                width={500} 
                height={500} 
                class="main-img"
              />
              
              <div class="overlay">
                <div class="icon-container">
                  {/* üëá CAMBIO: A√±adir data-image-url y cambiar a button */}
                  <button 
                    class="icon-link view-image-btn" 
                    data-image-url={imageMetadata.default.src}
                    data-image-alt={image.alt}
                    title="Ver imagen completa"
                  >
                    <span class="icon">üîç</span>
                  </button>
                  
                  {image.externalUrl && (
                    <a href={image.externalUrl} target="_blank" rel="noopener noreferrer" class="icon-link" title="Ver en Instagram">
                      <span class="icon">üîó</span>
                    </a>
                  )}
                </div>
                
                <div class="text-content">
                  <span class="overlay-title">{image.alt}</span>
                  <p class="overlay-description">{image.description}</p>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </main>
  </div>

  {/* üîí MODAL PARA VER IMAGEN EN GRANDE CON PROTECCI√ìN */}
  <div id="imageModal" class="modal">
    <span class="modal-close">&times;</span>
    <img id="modalImage" class="modal-content" alt="" />
    <div id="modalCaption" class="modal-caption"></div>
  </div>
</BaseLayout>

<style>
  .container { max-width: 1400px; margin: 0 auto; padding: 0 1.5rem; }
  .gallery-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; }
  .gallery-item { position: relative; aspect-ratio: 1/1; overflow: hidden; border-radius: 0.75rem; background-color: #18181b; }
  .main-img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease; }
  
  .overlay { 
    position: absolute; 
    inset: 0; 
    background: rgba(0, 0, 0, 0.75); 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    opacity: 0; 
    transition: opacity 0.3s ease; 
    backdrop-filter: blur(4px);
    padding: 1.5rem;
    text-align: center;
  }

  .gallery-item:hover .overlay { opacity: 1; }
  .gallery-item:hover .main-img { transform: scale(1.1); }

  .icon-container { display: flex; gap: 1rem; margin-bottom: 1.25rem; }
  
  .icon-link { 
    background: white; 
    width: 45px; 
    height: 45px; 
    border-radius: 50%; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    text-decoration: none; 
    transition: all 0.2s ease; 
    border: none;
    cursor: pointer;
  }
  
  .icon-link:hover { transform: translateY(-3px); background: #22d3ee; }
  
  .text-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .overlay-title { 
    color: white; 
    font-weight: 700; 
    font-size: 1.1rem; 
    display: block;
  }

  .overlay-description { 
    color: #d4d4d8;
    font-size: 0.85rem; 
    line-height: 1.4;
    margin: 0;
    max-width: 220px;
  }

  .icon { font-size: 1.2rem; }

  /* üîí ESTILOS DEL MODAL PROTEGIDO */
  .modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }

  .modal-content {
    margin: auto;
    display: block;
    max-width: 90%;
    max-height: 90%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    user-select: none;
    -webkit-user-select: none;
    pointer-events: none;
    -webkit-touch-callout: none;
  }

  .modal-close {
    position: absolute;
    top: 20px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    z-index: 10000;
  }

  .modal-close:hover,
  .modal-close:focus {
    color: #22d3ee;
  }

  .modal-caption {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    text-align: center;
    color: #ccc;
    padding: 20px;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
  }

  @media (max-width: 700px) {
    .modal-content {
      max-width: 95%;
    }
  }
</style>

<script>
  // üîí PROTECCI√ìN DE IM√ÅGENES EN MODAL
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage') as HTMLImageElement;
    const modalCaption = document.getElementById('modalCaption');
    const closeBtn = document.querySelector('.modal-close');
    const viewButtons = document.querySelectorAll('.view-image-btn');

    // Abrir modal al hacer click en el bot√≥n de lupa
    viewButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const button = e.currentTarget as HTMLButtonElement;
        const imageUrl = button.getAttribute('data-image-url');
        const imageAlt = button.getAttribute('data-image-alt');

        if (modal && modalImg && modalCaption && imageUrl) {
          modal.style.display = 'block';
          modalImg.src = imageUrl;
          modalImg.alt = imageAlt || '';
          modalCaption.textContent = `${imageAlt || ''} | gvpv12.github.io`;
        }
      });
    });

    // Cerrar modal
    if (closeBtn && modal) {
      closeBtn.addEventListener('click', () => {
        modal.style.display = 'none';
      });
    }

    // Cerrar con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal) {
        modal.style.display = 'none';
      }
    });

    // Cerrar al hacer click fuera de la imagen
    if (modal) {
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.style.display = 'none';
        }
      });
    }

    // üîí PROTECCIONES EN EL MODAL
    if (modalImg) {
      // ‚ùå Bloquear drag
      modalImg.draggable = false;
      modalImg.addEventListener('dragstart', (e) => {
        e.preventDefault();
        return false;
      });

      // ‚ùå Bloquear click derecho
      modalImg.addEventListener('contextmenu', (e) => {
        e.preventDefault();
        return false;
      });

      // ‚ùå Bloquear long-press m√≥vil
      let pressTimer: number;
      modalImg.addEventListener('touchstart', (e) => {
        pressTimer = setTimeout(() => {
          e.preventDefault();
        }, 500);
      });

      modalImg.addEventListener('touchend', () => {
        clearTimeout(pressTimer);
      });

      modalImg.addEventListener('touchmove', () => {
        clearTimeout(pressTimer);
      });
    }

    // üîí Bloquear teclas de guardar cuando el modal est√° abierto
    document.addEventListener('keydown', (e) => {
      if (modal && modal.style.display === 'block') {
        // Bloquear Ctrl+S (guardar)
        if (e.ctrlKey && e.key === 's') {
          e.preventDefault();
          return false;
        }
        // Bloquear Ctrl+P (imprimir)
        if (e.ctrlKey && e.key === 'p') {
          e.preventDefault();
          return false;
        }
      }
    });
  });
</script>