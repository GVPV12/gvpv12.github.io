  { title: 'The Witness', cover: '/juegos/covers/witness.jpg', url: 'https://store.steampowered.com/app/210970/' },

  { title: 'Gris', cover: '/juegos/covers/gris.jpg', url: 'https://store.steampowered.com/app/683320/GRIS/' },
  { title: 'A Short Hike', cover: '/juegos/covers/short-hike.jpg', url: 'https://store.steampowered.com/app/1055540/' },
