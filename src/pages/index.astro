          </div>
        </Prose>
      </div>
      <Image src={Ava} alt="Grecia V." width={300} loading="eager" class="rounded-3xl rotate-3 mx-4 md:mx-0"/>
		</div>
		<main>
      <!-- Secci칩n Jard칤n: todos los posts EXCEPTO los que tienen tag "blog" -->
      <div class='mt-6 mb-12'>
        <div class="flex justify-between gap-2 border-b mb-1 dark:border-b-zinc-700">
          <h2 class="text-lg font-bold mb-3">游꺔Jard칤n</h2>
          <a href="/jardin/" class="inline-block py-2 underline dark:prose-invert">Todos los posts &raquo;</a>
        </div>
        <div class="text-sm">
          {
            gardenPosts.map((post: BlogPost) => (
              <PostItem post={post} />
            ))
          }      
        </div>
      </div>

      <!-- Secci칩n Blogs y an치lisis: solo posts con tag "blog" -->
