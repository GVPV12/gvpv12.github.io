---
import { Image } from 'astro:assets';
import Ava from '@src/assets/img/ava.jpg';

type PicSize = 'sm' | 'md' | 'lg';
interface Props {
	picSize: PicSize;
}
const { picSize } = Astro.props;
---

<div class='flex gap-4 items-center leading-tight not-prose'>
	<a
		href='/projects'
		target='_blank'
		rel='noopener noreferrer'
		class:list={[
			'rounded-full overflow-hidden shrink-0',
			{ 'w-12 h-12': picSize === 'sm' },
			{ 'w-[70px] h-[70px]': picSize === 'md' },
			{ 'w-[90px] h-[90px]': picSize === 'lg' }
		]}
	>
		<Image src={Ava} alt='Grecia V.' />
	</a>
	<div>
		<div>
			<a
				href='https://github.com/GVPV12'
				class='block font-bold text-inherit hover:text-[var(--link-color)] text-[0.825rem]'
				target='_blank'
				rel='noopener noreferrer'
			>
				Grecia V.
			</a>
		</div>
		<small class='avatar__subtitle text-[0.625rem]'>Web designer & dev | Multidisciplinary artist | Game dev Enthusiast</small>
	</div>
</div>
