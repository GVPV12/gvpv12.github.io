---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  description?: string;
  demoLink: string;
  tags?: string[];
  image?: string;
}

const { name, description, demoLink, tags, image } = Astro.props;
---

<a 
  href={demoLink} 
  target="_blank" 
  rel="noopener noreferrer"
  class="group block bg-zinc-900 rounded-lg overflow-hidden border border-zinc-800 hover:border-zinc-700 transition-all duration-300 hover:scale-[1.02]"
>
  {image && (
    <div class="relative w-full overflow-hidden bg-zinc-950" style="aspect-ratio: 16/9;">
      <img 
        src={image} 
        alt={`Preview de ${name}`}
        class="absolute inset-0 w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}
  
  <div class="p-5">
    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-zinc-300 transition-colors">
      {name}
    </h3>
    
    {description && (
      <p class="text-zinc-400 text-sm mb-3">
        {description}
      </p>
    )}
    
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="px-2 py-1 text-xs rounded-md bg-zinc-800 text-zinc-300">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
